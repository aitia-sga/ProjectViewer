{
	"name": "projectViewer",
	"displayName": "Project Viewer",
	"description": "A basic example of a file explorer-like tree view.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.82.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "projectViewer",
					"title": "Project Viewer",
					"icon": "resources/folder.png"
				}
			]
		},
		"views": {
			"projectViewer": [
				{
					"id": "activeProjectsView",
					"name": "Active projects"
				},
				{
					"id": "projectsView",
					"name": "Projects"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "projectViewer.addProjectToActive",
					"when": "viewItem == project",
					"group": "0_project@name"
				},
				{
					"command": "projectViewer.removeProjectFromActive",
					"when": "view == activeProjectsView && viewItem == activeProject",                	
					"group": "0_project@name"
				},
				{
					"command": "projectViewer.createNewFolder",
					"when": "view == activeProjectsView && (viewItem == activeProject || viewItem == logicalDirectory)",                	
					"group": "0_project@name"
				},
				{
					"command": "projectViewer.deleteFolderWithFiles",
					"when": "view == activeProjectsView && viewItem == logicalDirectory",                	
					"group": "0_project@name"
				},
				{
					"command": "projectViewer.removeFromProject",
					"when": "view == activeProjectsView && viewItem == file",                	
					"group": "0_project@name"
				}
			],
			"view/title": [
				{
					"command": "projectViewer.newProject",
					"group": "navigation",
					"when": "view == projectsView"
				}
			],
			"explorer/context": [
				{
					"command": "projectViewer.addToProject",
					"group": "1_modification"
				}
			]
		},
		"commands": [
			{
				"command": "projectViewer.addProjectToActive",
				"title": "Add to active projects"
			},
			{
				"command": "projectViewer.removeProjectFromActive",
				"title": "Remove from active projects"
			},
			{
				"command": "projectViewer.createNewFolder",
				"title": "Create new project folder"
			},
			{
				"command": "projectViewer.deleteFolderWithFiles",
				"title": "Delete folder and files "
			},
			{
				"command": "projectViewer.newProject",
				"title": "New project",
				"icon": {
					"light": "resources/plus2.png",
					"dark": "resources/plus2.png"
				}
			},
			{
				"command": "projectViewer.addToProject",
				"title": "Add to project"
			},
			{
				"command": "projectViewer.removeFromProject",
				"title": "Remove from project"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.82.0",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.47.0",
		"glob": "^10.3.7",
		"mocha": "^10.2.0",
		"typescript": "^5.1.6"
	}
}
