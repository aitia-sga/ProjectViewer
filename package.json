{
    "name": "simple-explorer",
    "displayName": "Simple Explorer",
    "description": "A basic example of a file explorer-like tree view.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "simpleExplorer",
                    "title": "Simple Explorer",
                    "icon": "resources/folder.png"
                }
            ]
        },
        "views": {
            "simpleExplorer": [
                {
					"id": "filesView",
					"name": "Files"
				},
				{
					"id": "extrasView",
					"name": "Extras"
				}
            ]
        }
    },
    "activationEvents": [
        "onView:simpleExplorerView"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "typescript": "^4.4.2",
        "vscode": "^1.1.37",
        "tslint": "^5.12.1"
    }
}
